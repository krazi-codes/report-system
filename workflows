.github /worlflows
automate.yml
name: Email Sorter Bot

on:
  schedule:
    - cron: '0 * * * *' # This runs every hour automatically
  workflow_dispatch:   # This allows you to click a "Run" button manually

jobs:
  sort:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout Code
        uses: actions/checkout@v4

      - name: Setup Python
        uses: actions/setup-python@v4
        with:
          python-version: '3.10'

      - name: Run Sorting Script
        env:
          EMAIL_USER: ${{ secrets.EMAIL_USER }}
          EMAIL_PASS: ${{ secrets.EMAIL_PASS }}
        run: python sorter.py
